@model IEnumerable<ContosoHotel.Models.Room>

@{
    ViewBag.Title = "Book a Reservation";
}

<h2>Book Reservation</h2>


<table class="table">
    <tr>
        <th>
            Room Number
        </th>
        <th>
            Room Type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoomID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @{ if (item.Vacancy)
                {
                    @Html.ActionLink(HttpUtility.HtmlDecode("Book Room &raquo;"), "Reserve", new { id = item.RoomID }, new { @class = "btn btn-warning" })
                }
                else
                {
                    <a class="btn btn-warning disabled">Unavailable &raquo;</a>
                }
            }
        </td>
    </tr>
}

</table>
